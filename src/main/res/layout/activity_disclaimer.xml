<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerBreatheFree7"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:background="#2196F3"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Disclaimer"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonConsent"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@drawable/button_custom"
        android:text="I consent"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <Button
        android:id="@+id/buttonNoConsent"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button_custom"
        android:text="I do not consent"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConsent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="359dp"
        android:layout_height="426dp"
        android:gravity="center"
        android:text="To guarantee an ethically sound piece of research fundamental ethical principles must be adhered to for the purposes of data collection and development of the proposed app. Researchers are responsible for complying with the Data Protection Act (2018); thus, all data gathered shall be stored in a cabinet accessible by authorised personnel only, for no longer than the duration of this study. Once the study has been completed, all data provided will be destroyed. In addition, all information provided will remain anonymous. Should you wish to withdraw from the study you are free to do so at any point, and any data provided previously will be discarded."
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />
</androidx.constraintlayout.widget.ConstraintLayout>